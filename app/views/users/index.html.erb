<div class="profile container content">
    <div class="row">
        <!--Left Sidebar-->
        <div class="col-md-3 md-margin-bottom-40">
            
            <ul class="list-group sidebar-nav-v1 margin-bottom-40" id="sidebar-nav-1">
                <li class="list-group-item active">
                    <a href="/dashboard"><i class="fa fa-bar-chart-o"></i>CYVSA </a>
                    
                </li>
                <li class="list-group-item" >
                <%= link_to  dashboard_path, class: 'nounderline' do %>
                        <i class="fa fa-user"></i>Hola: <%= current_user.name%>
                        <% end %>
                    </li>


                <% if current_user.admin? %>
                <li class="list-group-item ">
                    <%= link_to  signup_path(@user), class: ' disabled'  do%>
                    <i class="fa fa-group"></i> Agregar nuevo usuario
                    <%end%>
                    
                </li>
                <%end %>
                
                <li class="list-group-item list-toggle">
                    <a class="accordion-toggle collapsed" href="#collapse-timeline" data-toggle="collapse"><i class="fa fa-cog"></i> Menu</a>
                    <ul id="collapse-timeline" class="collapse" style="height: 0px;">
                        <li class="list-group-item ">
                            <%= link_to  dashboard_path, class: 'nounderline' do %>
                            <i class="fa fa-cubes"></i> Dashboard
                            <% end %>
                        </li>
                        <li class="list-group-item">
                            <%= link_to signout_path, method: "delete", class: 'nounderline'  do%>  <i class="fa fa-sign-out fa-fw"></i> Salir
                            <%end%>
                        </li>
                        
                    </ul>
                </li>
                
                
                
            </ul>
            
            
        </div>
        <!--End Left Sidebar-->
        
        <div class="col-md-9">
            <!--Profile Body-->
            <div class="profile-body">
                
                <!--Table Search v1-->
                <div class="table-search-v1 margin-bottom-20">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th class="hidden-sm">Email</th>
                                    <th> Rol </th>
                                    <th width="300">Botones</th>
                                    
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <% @users.all.each do |user| %>
                                <tr>
                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td class="td-width"> <%= user.email%> </td>
                                    <td>
                                        <% if user.admin?  %>
                                        Administrador
                                        <% else %>
                                        Usuario
                                        <% end %>
                                    </td>
                                    
                                    <td> <% if current_user?(user) || current_user.admin? %>
                                        <%= link_to "Editar", edit_user_path(user), :class => 'btn btn-warning btn-xs' %>
                                        
                                        <%= link_to "borrar", user_path(user),:class => 'btn btn-danger btn-xs', method: :delete, data: {confirm: "¿Está usted seguro que quiere borrar este servicio?"}%>
                                        <% else %>
                                        
                                        <%= link_to "Editar", edit_user_path(user), :class => 'btn btn-warning btn-xs disabled' %>
                                        
                                        <%= link_to "borrar", user_path(user),:class => 'btn btn-danger btn-xs disabled', method: :delete, data: {confirm: "¿Está usted seguro que quiere borrar este servicio?"}%>
                                        <% end %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                
                
                
                
                
                
            </div>
            <!--End Profile Body-->
        </div>
        </div><!--/end row-->
    </div>