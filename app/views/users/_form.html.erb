<div class="container content">
  <div class="row">
    
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 reg-page">
      <div class="reg-header">
        <% if params[:action] == "new"  %>
            <h2>Registra una cuenta nueva. </h2>
        <% else %>
            <h2>Editar cuenta. </h2>
        <% end %>
        <!-- <p>Already Signed Up? Click <%= link_to "Sign in", admin_path %>  to login your account.</p -->
      </div>
      <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
              <%= f.label :name, "Nombre" %>
              <%= f.text_field :name, class: 'form-control margin-bottom-20', placeholder:"Nombre" %>
              <%= f.label :email %>
              <%= f.text_field :email, :autofocus => false, class: 'form-control margin-bottom-20', placeholder:"Email" %>
              <%= f.label :password, " Contrase単a" %>
              <%= f.password_field :password, autocomplete: "off", :class => "form-control margin-bottom-20", placeholder:"Contrase単a" %>
              <%= f.label :password_confirmation, "Confirmar contrase単a" %>
              <%= f.password_field :password_confirmation, :class => "form-control margin-bottom-20",placeholder:"Confirma contrase単a"%>
              <%= f.label :Administrador %>
              <%= f.check_box :admin %> 
              </br></br>
        <div class="col-lg-5 text-right">
        
        <% if params[:action] ==  "new" || params[:action] == "create"%>
          <%= f.submit "Crear cuenta", class: "btn btn-primary" %>
        
        <%else%>
          <%= f.submit "Guardar cambios",  class: "btn btn-primary" %> 
        <%end%>
        </div>
      <% end %>
      
    </div>
  </div>
</div>
