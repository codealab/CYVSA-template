<!-- Service Blocks -->
<div class="container content">
    <div class="row margin-bottom-30">
        <% Service.all.each do |t| %>
        <div class="col-sm-4 ">
            <div class="service">
                <i class="fa <%= "#{t.icon}"%> service-icon"></i>
                
                <div class="desc">
                    <%= service("escriba un titulo","titulo") %>
                    <p> <%= service("describa un contenido", "descripcion") %></p>
                </div>
            </div>
        </div>
        <% end %>
        
    </div>
</div>
<!-- End Service Blokcs -->