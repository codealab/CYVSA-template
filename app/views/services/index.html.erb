<%- model_class = Service -%>
<div class="panel panel-grey margin-bottom-40">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-globe"></i> Table Bordered</h3>
    </div>
    <div class="panel-body">
        <table class="table table-bordered">
            <thead>
                  <tr>
        <th><%= model_class.human_attribute_name('#') %></th>
        <th><%= model_class.human_attribute_name(:Titulo) %></th>
        <th><%= model_class.human_attribute_name(:Comentario) %></th>
        <th><%= model_class.human_attribute_name(:Acciones) %></th>
    </tr>
            </thead>
            <tbody>
          
               <% @services.each do |service| %>
    <tr>
        <td><%=  service.id %></td>
        <td><%= service.title %></td>
        <td><%= service.content %></td>
        
        <td>
       <%= link_to "Nuevo", new_service_path(@services, format: "Nuevo"), :class => 'btn btn-success btn-xs'%>
          <%= link_to "Editar",  edit_service_path(@services, format: "Edit"), :class => 'btn btn-warning btn-xs'%>
          <%= link_to "Eliminar",  service_path(@services, format: "Eliminar"),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger btn-xs' %>


           
        </td>
    </tr>
    <% end %>
            </tbody>
        </table>
    </div>
</div>
