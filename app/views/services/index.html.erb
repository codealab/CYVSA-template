#encoding: utf-8
<%- model_class = Service -%>
<div class="container content">
    <div class="panel panel-grey margin-bottom-40">
        <div class="panel-heading">
            <div class="pull-right">
                <%= link_to "Nuevo", new_service_path(@services, format: "Nuevo"), :class => 'btn btn-success btn-xs'%>
            </div>
            <h3 class="panel-title"><i class="fa fa-globe"></i> Servicios</h3>
        </div>
        <div class="panel-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th><%= model_class.human_attribute_name('#') %></th>
                        <th><%= model_class.human_attribute_name(:Icono) %></th>
                        <th><%= model_class.human_attribute_name(:Titulo) %></th>
                        <th><%= model_class.human_attribute_name(:Comentario) %></th>
                        <th><%= model_class.human_attribute_name(:Acciones) %></th>
                    </tr>
                </thead>
                <tbody>
                    
                    <% @services.each do |service| %>
                    <tr>
                        <td><%=  service.id %></td>
                        <td><%= service.icon %></td>
                        <td><%= service.title %></td>
                        <td><%= service.content %></td>
                        
                        <td>
                            
                            <%= link_to "Editar",  edit_service_path(service, format: "Edit"), :class => 'btn btn-warning btn-xs'%>

                            <%= link_to "borrar", service_path(service),:class => 'btn btn-danger btn-xs', method: :delete, data: {confirm: "¿Está usted seguro que quiere borrar este servicio?"}%>
                            
                        </td>
                    </tr>
                    <% end %>
                </tbody>
                
            </table>
        </div>
    </div>
</div>