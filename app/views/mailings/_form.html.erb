<%= form_for @mailing, url: "/mailings/create" do |f| %>
                        <%= render 'shared/error_messages', object: f.object %>
                        <%= f.label :Nombre %>:
                        <%= f.text_field :name %><br />
                        <%= f.label :Correo %>:
                        <%= f.text_field :email %><br />
                        <%= f.label :Mensaje %>:
                        <%= f.text_area :message%><br />
                        <%= f.submit %>
                        <% end %>