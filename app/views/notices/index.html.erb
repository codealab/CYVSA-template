
<%- model_class = Notice-%>
<div class="container content">
    <div class="panel panel-grey margin-bottom-40">
        <div class="panel-heading">
            <div class="pull-right">
              
            <%= link_to "Nuevo", new_notice_path, :class => 'btn btn-success btn-xs' %>
            </div>
            <h3 class="panel-title"><i class="fa fa-globe"></i> Informativo</h3>
        </div>
        <div class="panel-body">
            <table class="table table-bordered">
                <thead>
                    <tr>

                        <th><%= model_class.human_attribute_name(:Imagen) %></th>
                        <th><%= model_class.human_attribute_name(:Titulo) %></th>
                        <th><%= model_class.human_attribute_name(:Comentario) %></th>
                        <th><%= model_class.human_attribute_name(:Acciones) %></th>
                    </tr>
                </thead>
                <tbody>
                    
                    <% @notices.each do |notice| %>
                    <tr>
                       
                        <td><%=  image_tag notice.image_url(:thumb).to_s%></td>
                        <td><%= notice.title %></td>
                        <td><%= notice.text %></td>
                        
                        
                        <td>
                            
                            
                            <%= link_to "Editar", edit_notice_path(notice), :class => 'btn btn-success btn-xs' %>

                            <%= link_to "borrar", notice_path(notice),:class => 'btn btn-danger btn-xs', method: :delete, data: {confirm: "¿Está usted seguro que quiere borrar este servicio?"}%>
                             
                            
                        </td>
                    </tr>
                    <% end %>
                </tbody>
                
            </table>
        </div>
    </div>
</div>